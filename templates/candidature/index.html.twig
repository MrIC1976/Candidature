{% extends 'base.html.twig' %}

{% block title %}Candidature index{% endblock %}

{% block body %}
<div class="container">
    <div class="titre">
        <h1>CANDIDATURE</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date d'envoi</th>
                <th>Entreprise</th>
                <th>Intitule</th>
