                <th>Date d'entretien</th>
                <th>Resultat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for candidature in candidatures %}
            <tr>
                <td>{{ candidature.id }}</td>
                <td>{{ candidature.dateEnvoi ? candidature.dateEnvoi|date('Y-m-d') : '' }}</td>
                <td>{{ candidature.entreprise }}</td>
                <td>{{ candidature.intitule }}</td>
                <td>{{ candidature.dateReponse ? candidature.dateReponse|date('Y-m-d') : '' }}</td>
                <td>{{ candidature.dateContact ? candidature.dateContact|date('Y-m-d') : '' }}</td>
                <td>{{ candidature.dateEntretien ? candidature.dateEntretien|date('Y-m-d') : '' }}</td>
                <td>{{ candidature.resultat }}</td>
                <td>
                    <a href="{{ path('app_candidature_edit', {'id': candidature.id}) }}" class="btn btn-primary mt-3">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune candidature</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="bouton">
    <a href="{{ path('app_candidature_new') }}" class="btn btn-primary mt-3">Nouvelle candidature</a>
